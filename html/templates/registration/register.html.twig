{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="card-group support mt-3 mt-lg-5">
    <div class="card ">
        <div class="card-body">


            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1 class="h1 mb-3 font-weight-normal">Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <label for="username">Email Address</label>
                <input type="text" value="{{ field_value(registrationForm.username) }}" name="{{ field_name(registrationForm.username) }}" id="{{ field_name(registrationForm.username) }}" class="form-control mb-3" autocomplete="username" required autofocus>
                <label for="{{ field_name(registrationForm.plainPassword) }}">Password</label>
                <input type="password" name="{{ field_name(registrationForm.plainPassword) }}" id="{{ field_name(registrationForm.plainPassword) }}" class="form-control mb-3" autocomplete="current-password" required>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" name="{{ field_name(registrationForm.agreeTerms) }}" type="checkbox" role="switch" id="{{ field_name(registrationForm.agreeTerms) }}">
                    <label class="form-check-label" for="{{ field_name(registrationForm.agreeTerms) }}">Agree to receive an email when your story hits the list</label>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Register</button>
            {{ form_end(registrationForm) }}

        </div>
    </div>
</div>
{% endblock %}
