<div class="card mt-5 pb-5">
    <h2 class="pt-3 mt-5 text-center"><i class="fa fa-meteor fa-rotate-180"></i> Ranking by Date <i class="fa fa-meteor fa-rotate-90"></i></h2>
    <p class="card-text text-center mb-5" style="font-size: small;">Updated At Midnight PST</p>

    <div class="col-12">
        <div class="card-title p-md-5">
            <div class="card-body p-md-5">
                <div class="row">
                    <canvas id="rankingChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
(async function () {

  const storyRankings = {{ genreDailyData|raw }}; 
console.log(storyRankings)
  // Prepare data for each genre across stories
  const datasets = [];

  // Iterate through each story
  for (const story in storyRankings) {
    // Group by genre
    const groupedByGenre = storyRankings[story].reduce((acc, entry) => {
      if (!acc[entry.genre]) {
        acc[entry.genre] = [];
      }
      acc[entry.genre].push({
        day: entry.day,
        rank: entry.rank,
      });
      return acc;
    }, {});

    for (const genre in groupedByGenre) {
      datasets.push({
        label: `${story} - ${genre}`,
        data: groupedByGenre[genre].map(entry => ({
          x: entry.day,  
          y: entry.rank, 
        })),
        fill: false,
        borderColor: getRandomColor(),
        tension: 0.2,  // curve of the line
        pointRadius: 6,  // size of the points
      });
    }
  }

  // Create the chart
  new Chart(document.getElementById('rankingChart'), {
    type: 'line',
    data: {
      datasets: datasets,
    },
    options: {
      scales: {
        x: {
          type: 'category',
          title: {
            display: true,
            text: 'Days',
          },
        },
        y: {
          min: 1,
          max: 50,
          reverse: true,  // Reverse the y-axis so the best rank is at the top
          title: {
            display: true,
            text: 'Rank',
          },
        },
      },
    },
  });
})();

function getRandomColor() {
  const letters = '0123456789ABCDEF';
  let color = '#';
  for (let i = 0; i < 6; i++) {
    color += letters[Math.floor(Math.random() * 16)];
  }
  return color;
}
</script>