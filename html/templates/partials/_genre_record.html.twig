<div class="card mt-5 pb-5">
    <h2 class="pt-3 mt-5 text-center"><i class="fa fa-meteor fa-rotate-180"></i> Highest Rankings by Genre <i class="fa fa-meteor fa-rotate-90"></i></h2>
    <p class="card-text text-center mb-5" style="font-size: small;"></p>

    <div class="col-12">
        <div class="card-title p-md-5">
            <div class="card-body p-md-5">
                <div class="row">
                    <canvas id="genresChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
(async function () {
  const genreChartData = {{ genreChartData|raw }}; 
  const datasets = genreChartData.map(item => ({
    label: item.label,
    data: item.data.map(row => ({
      x: row.x,
      y: row.y,
      r: row.r,
    })),
    pointRadius: 5, 
  }));

  new Chart(document.getElementById('genresChart'), {
    type: 'scatter',
    options: {
      aspectRatio: 2,
      scales: {
        x: {
          type: 'category',
          labels: [...new Set(genreChartData.flatMap(item => item.data.map(row => row.genre)))],
          title: {
            display: true,
            text: 'Genres',
          },
        },
        y: {
          min: 1,
          title: {
            display: true,
            text: 'Rank',
          },
          reverse: true, // Reverse the y-axis so the best rank is at the top
        },
      },
    },
    data: {
      datasets: datasets,
    },
  });
})();
</script>