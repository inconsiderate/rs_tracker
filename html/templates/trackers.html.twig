{% extends "base.html.twig" %}

{% block body %}
</br>
</br>
</br>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}

<div class="card-group">

    <div class="card">
        <h2 class="card-title mt-3 text-center">Tracked Stories</h2>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Genres Lists Tracked</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in data %}
                    <tr>
                    <td>{{item.storyName}}</td>
                    <td>{% for genre in item.trackedGenres %}{{ genre }}{% if loop.last != true %}, {% endif%}{% endfor %}</td>
                    <td>
                        <a href="{{ path('delete_tracker', { 'id': item.id }) }}" class="btn btn-danger" onclick="event.preventDefault(); if(confirm('Are you sure you want to delete this item?')) document.getElementById('delete-form-{{ item.id }}').submit();">
                            <i class="fa fa-trash-can"></i>
                        </a>
                        <form id="delete-form-{{ item.id }}" action="{{ path('delete_tracker', { 'id': item.id }) }}" method="POST" style="display: none;">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                        </form>
                    </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card-group mt-5">
    <div class="card">
        <h2 class="card-title mt-3 text-center">Track another story</h2>
        <div class="card-body">
            <form method="post">
                {{ form_widget(form._token) }}

                {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}

                <div class="card-body">
                    <div class=" mb-3">
                        <label for="story_storyName">Full link to your story page ex: https://www.royalroad.com/fiction/25401/awaken-online-conception-a-fanfic</label>
                        <input type="text" id="story_storyName" name="story[storyName]" class="form-control" placeholder="https://www.royalroad.com/fiction..." aria-label="Story Name" required>
                    </div>
                    <div class="input-group mt-3 mb-3 form-group-1">
                        <p>Which Rising Stars lists do you want to track (we'll watch the Main Page automatically)</p>
                        <div class="form-group">
                            <div class="row row-cols-1 row-cols-md-2 g-2">
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="action" name="story[trackedGenres][]" value="action">
                                        <label class="form-check-label" for="action">Action</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="adventure" name="story[trackedGenres][]" value="adventure">
                                        <label class="form-check-label" for="adventure">Adventure</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="comedy" name="story[trackedGenres][]" value="comedy">
                                        <label class="form-check-label" for="comedy">Comedy</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="contemporary" name="story[trackedGenres][]" value="contemporary">
                                        <label class="form-check-label" for="contemporary">Contemporary</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="drama" name="story[trackedGenres][]" value="drama">
                                        <label class="form-check-label" for="drama">Drama</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="fantasy" name="story[trackedGenres][]" value="fantasy">
                                        <label class="form-check-label" for="fantasy">Fantasy</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="historical" name="story[trackedGenres][]" value="historical">
                                        <label class="form-check-label" for="historical">Historical</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="horror" name="story[trackedGenres][]" value="horror">
                                        <label class="form-check-label" for="horror">Horror</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="mystery" name="story[trackedGenres][]" value="mystery">
                                        <label class="form-check-label" for="mystery">Mystery</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="psychological" name="story[trackedGenres][]" value="psychological">
                                        <label class="form-check-label" for="psychological">Psychological</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="romance" name="story[trackedGenres][]" value="romance">
                                        <label class="form-check-label" for="romance">Romance</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="satire" name="story[trackedGenres][]" value="satire">
                                        <label class="form-check-label" for="satire">Satire</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="sci_fi" name="story[trackedGenres][]" value="sci_fi">
                                        <label class="form-check-label" for="sci_fi">Sci-fi</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="one_shot" name="story[trackedGenres][]" value="one_shot">
                                        <label class="form-check-label" for="one_shot">Short Story</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="tragedy" name="story[trackedGenres][]" value="tragedy">
                                        <label class="form-check-label" for="tragedy">Tragedy</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                <div class=" text-center mb-3">
                    <div class="">
                        <p class="card-title">That's all we need, hit submit below to start tracking!</p>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


{% endif %}
{% endblock %}